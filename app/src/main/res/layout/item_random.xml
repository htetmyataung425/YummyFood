<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/randomcardview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:id="@+id/randomimage"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ryan" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/randomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ryan"
        app:layout_constraintTop_toBottomOf="@id/randomcardview"
        app:layout_constraintLeft_toLeftOf="@id/randomcardview"
        app:layout_constraintRight_toRightOf="@id/randomcardview"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/firstRandomProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>